#ifdef gdef
gdef(String,   caption, "GNU APL PLOT", plot window caption)
gdef(Pixel,    border_width,        10, width of the window border)
gdef(Pixel,    pa_width,           600, plotarea width)
gdef(Pixel,    pa_height,          400, plotarea height)
gdef(Pixel,    pa_border_L,         30, pixels left of the plotarea)
gdef(Pixel,    pa_border_R,         20, pixels right of the plotarea)
gdef(Pixel,    pa_border_T,         25, pixels above the plotarea)
gdef(Pixel,    pa_border_B,         25, pixels below the plotarea)
gdef(uint32_t, gridX_style,          1, X grid style (0-2))
gdef(Pixel,    gridX_pixels,        44, pixels between X grid lines)
gdef(Pixel,    gridX_line_width,     1, thickness of the X-grid lines)
gdef(Color,    gridX_color,   0x000000, color of the X-grid lines)
gdef(uint32_t, gridY_style,          1, Y grid style (0-2))
gdef(Pixel,    gridY_pixels,        33, pixels between Y grid lines)
gdef(Pixel,    gridY_line_width,     1, thickness of the Y-grid lines)
gdef(Color,    gridY_color,   0x000000, color of the Y-grid lines)
gdef(Color,    canvas_color,  0xFFFFFF, background color of the plot window)
gdef(Pixel,    legend_X,            50, the X position of the legend)
gdef(Pixel,    legend_Y,            50, the Y position of the legend)
gdef(Pixel,    legend_dY,           15, the distance between legend lines)
gdef(Pixel,    legend_lX,           50, the length of the legend lines)
gdef(double,   rangeX_min,           0, the start of the X range to be plotted)
gdef(double,   rangeX_max,           0, the end of the X range to be plotted)
gdef(double,   rangeY_min,           0, the start of the Y range to be plotted)
gdef(double,   rangeY_max,           0, the end of the Y range to be plotted)
#endif

#ifdef ldef
ldef(Color,    line_color,    0x00FF00, the color of plot line N)
ldef(Pixel,    line_width,           3, the thickness of plot line N)
ldef(Color,    point_color,   0x00FF00, the color of the plot points)
ldef(uint32_t, point_style,          1, the form of the plot points)
ldef(Pixel,    point_size,           8, the outer diameter of the plot points)
ldef(Pixel,    point_size2,          0, the inner diameter of the plot points)
ldef(String,   legend_name,         "", the name of plot line N in the legend)
#endif

#undef gdef
#undef ldef
